{
  "name": "Must-Stash",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Enhanced Personalized Search Tool",
  "icons": {
    "16": "/images/icon-16-blue.png",
    "48": "/images/icon-48-blue.png",
    "128": "/images/icon-128-blue.png"
  },
  "permissions": [
    "history",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "/images/icon-128-blue.png"
  },
  "options_page": "./options/options.html",
  "background": {
    "persistent": true,
    "scripts": ["./background/js/background-bundle.js"]
  }
}